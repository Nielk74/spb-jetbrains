<idea-plugin>
    <id>com.spb.spb-jetbrains</id>
    <name>SPB Build</name>
    <version>1.5.0</version>
    <vendor email="support@example.com" url="https://example.com">SPB</vendor>

    <description><![CDATA[
    Provides Superbuilding - triggers native IDE build with build ID written to spb_active file.
    <ul>
        <li>Superbuild writes unique build ID to spb_active file for MSBuild to read</li>
        <li>Right-click context menu integration with hammer icon</li>
        <li>Automatic CLI tool update checking</li>
    </ul>
    ]]></description>

    <change-notes><![CDATA[
    <ul>
        <li>1.5.0 - Write build ID to spb_active file (readable by MSBuild via ReadLinesFromFile)</li>
        <li>1.4.0 - Random build ID, remove unused setting, fix download path</li>
        <li>1.3.0 - Context menu action now appears at top, redesigned hammer icon</li>
        <li>1.2.0 - Renamed to "Superbuilding" with hammer icon, use native IDE build API</li>
        <li>1.1.0 - Use VSTEL_CurrentSolutionBuildID env var, CLI update via HTTP Last-Modified, support IDE 252.*</li>
        <li>1.0.0 - Initial release</li>
    </ul>
    ]]></change-notes>

    <idea-version since-build="242" until-build="252.*"/>

    <depends>com.intellij.modules.rider</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Settings -->
        <applicationConfigurable
                parentId="tools"
                instance="com.spb.settings.SpbSettingsConfigurable"
                id="com.spb.settings.SpbSettingsConfigurable"
                displayName="SPB Build"/>

        <applicationService
                serviceInterface="com.spb.settings.SpbSettings"
                serviceImplementation="com.spb.settings.SpbSettings"/>

        <!-- Version check service -->
        <applicationService
                serviceInterface="com.spb.services.VersionCheckService"
                serviceImplementation="com.spb.services.VersionCheckService"/>

        <!-- Startup activity for version check -->
        <postStartupActivity implementation="com.spb.services.SpbStartupActivity"/>

        <!-- Notification group -->
        <notificationGroup id="SPB Build Notifications"
                           displayType="BALLOON"
                           toolWindowId="Build"/>
    </extensions>

    <actions>
        <!-- Superbuild action in context menu - placed at top -->
        <action id="com.spb.actions.SuperbuildSolutionAction"
                class="com.spb.actions.SuperbuildSolutionAction"
                text="Superbuilding"
                description="Build with unique ID written to spb_active file"
                icon="/icons/superbuild.svg">
            <add-to-group group-id="SolutionExplorerPopupMenu" anchor="first"/>
        </action>

        <!-- Build menu integration -->
        <action id="com.spb.actions.SuperbuildProjectAction"
                class="com.spb.actions.SuperbuildProjectAction"
                text="Superbuilding"
                description="Build project with unique ID written to spb_active file"
                icon="/icons/superbuild.svg">
            <add-to-group group-id="BuildMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
